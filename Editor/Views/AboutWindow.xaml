<Window x:Class="Hiker_Editor.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Hiker_Editor.Views"
        xmlns:local="clr-namespace:Hiker_Editor"
        mc:Ignorable="d"
        Owner="{x:Static local:App.CurrentMainWindow}"
        Title="About" Height="320" Width="480" Icon="/Hiker-Editor;component/Resources/Images/about.png"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="49*"/>
            <RowDefinition Height="96*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="/Resources/Images/hiker_logo.png" MaxWidth="328" MaxHeight ="128" Margin="90,10,90,6"/>
        <TextBox Margin="10,10,10,35" TextWrapping="Wrap" Text="Some text" Grid.Row="1"/>
        <Button Content="Some Button" Margin="0,0,10,10" Grid.Row="1" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="92"/>
        <Border BorderThickness="1" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Panel.ZIndex="-1"/>

    </Grid>
</Window>
